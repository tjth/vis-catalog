<% if @type == "image" %>

<style>

html {
    background-image:url('/visualisations/<%= @id %>/display_internal');
    background-repeat:none;
    background-position:center center;
    background-size: cover;
    width:100%;
    height:100%;
}

</style>


<% elsif @type == "video" %>


<script>
function replay() {
    var vid = document.getElementsByTagName('video')[0]
    
    vid.load()
}
</script>

<video style="width:100%; height:100%" autoplay onended="replay()">
  <source src="/visualisations/<%= @id %>/display_internal"  />
</video>

<% end %>
